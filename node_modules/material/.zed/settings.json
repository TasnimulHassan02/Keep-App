{
  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": [
            "eslint",
            "--stdin",
            "--fix",
            "--stdin-filename",
            "{buffer_path}"
          ]
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "format_on_save": "on",
      "tab_size": 2,
      "hard_tabs": false
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "experimental": {
          "useFlatConfig": true
        },
        "validate": "on",
        "run": "onType",
        "format": {
          "enable": true
        }
      }
    }
  },
  "tab_size": 2,
  "hard_tabs": false,
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true
}
